{
  "compilerOptions": {
    "target": "es6", //Need this to use import feature
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "outDir": "JSoutFile", //Need this since we are converting TS to JS to run node.js, need to create a JSoutFile folder before running npx tsc
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs", //Need this to run es6 code
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "src/**/*.tsx" // Fixed typo in pattern
  ]
}